<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logo_bus"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_bus"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@id/logo_bus"
            android:text="Need Help?"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_toRightOf="@id/logo_bus"
            android:text="Eastleigh High School"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@id/text1"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/text2_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Connect Us"
            android:textSize="28sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/phone_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2_contact"
            android:layout_marginStart="18dp"
            android:layout_marginTop="19dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:text="+254 700 00000"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="18dp"
             android:layout_below="@id/phone_contact"
            android:drawablePadding="10dp"
            android:text="info@example.com"
            android:textSize="17sp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/black"
            android:textColor="@color/black"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_writeUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Write us directly"
            android:textColor="@color/black"
            android:textSize="28sp"/>

        <EditText
            android:id="@+id/editText_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"
            android:hint="Hello"
            android:textColorHint="@color/black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#fece2f"
            android:text="Add Parent" />


    </LinearLayout>




</LinearLayout>