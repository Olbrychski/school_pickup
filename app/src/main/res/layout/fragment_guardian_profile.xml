<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/male_guardian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="21dp"
            android:text="Chris Smith"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father"
            android:textSize="14sp"
            android:layout_below="@id/male_guardian_name"
            android:layout_marginStart="18dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="132dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@id/male_guardian_name"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="141dp"
            android:drawablePadding="10dp"
            android:text="Contact number"
            android:textSize="17sp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableTint="@color/black"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/male_guardian_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="72dp"
            android:text="+254 700 000000"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/male_guardian_name"
            android:layout_marginStart="18dp"
            android:layout_marginTop="114dp"
            android:drawablePadding="10dp"
            android:text="Email Address"
            android:textSize="17sp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/black"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:text="chrismith@gmail.com"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="180dp"
            android:layout_toEndOf="@+id/address"
            android:text="Edit" />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/female_guardian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="21dp"
            android:text="Chris Smith"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father"
            android:textSize="14sp"
            android:layout_below="@id/female_guardian_name"
            android:layout_marginStart="18dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/profile_image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="132dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@id/female_guardian_name"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/phone_no_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="141dp"
            android:drawablePadding="10dp"
            android:text="Contact number"
            android:textSize="17sp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableTint="@color/black"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/female_guardian_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="72dp"
            android:text="+254 700 000000"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/email_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/female_guardian_name"
            android:layout_marginStart="18dp"
            android:layout_marginTop="114dp"
            android:drawablePadding="10dp"
            android:text="Email Address"
            android:textSize="17sp"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/black"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/address_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_2"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:text="chrismith@gmail.com"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="180dp"
            android:layout_toEndOf="@+id/address_2"
            android:text="Edit" />


    </RelativeLayout>

</LinearLayout>